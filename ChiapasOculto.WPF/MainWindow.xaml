<Window x:Class="ChiapasOculto.WPF.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:ChiapasOculto.WPF"
      mc:Ignorable="d"
      Title="Chiapas Oculto" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <Grid Background="#E8FFCC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="408*"/>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="102*"/>
            <ColumnDefinition Width="68*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="44*"/>
            <!-- Área superior libre -->
            <RowDefinition Height="Auto"/>
            <!-- Fila para los botones -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"  Orientation="Horizontal" Background="White" Grid.ColumnSpan="5">
            <TextBlock Text="BIENVENID@ (Nombre)" Foreground="Red" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0"/>
        </StackPanel>

        <Border Background="#DCDCDC" Margin="26,23,168,178" CornerRadius="5" Padding="10" Grid.Row="1">
            <StackPanel Grid.Row="1">
                <TextBlock Text="Operador@: (Nombre)" FontWeight="Bold"/>
                <TextBlock Text="Correo:"/>
                <TextBlock Text="Suscripción:"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="179,20,0,20" Width="442" Grid.ColumnSpan="3">
            <Button Content="AGREGAR" Height="37" Width="134" Background="#0BC333" Margin="10,0"/>
            <Button Content="ELIMINAR" Height="37" Width="134" Background="#C30B0B" Margin="10,0"/>
            <Button Content="MODIFICAR" Height="37" Width="134" Background="#E98623"/>
        </StackPanel>
        <Button Grid.Column="1" Content="REGISTRARSE" HorizontalAlignment="Center" Height="29" VerticalAlignment="Center" Width="82"/>
        <Button Grid.Column="2" Content="INICIAR SESIÓN" HorizontalAlignment="Center" Height="29" VerticalAlignment="Center" Width="100"/>
        <Button Grid.Column="3" Content="OPERADORAS" HorizontalAlignment="Center" Height="29" VerticalAlignment="Center" Width="82"/>
    </Grid>

</Window>
