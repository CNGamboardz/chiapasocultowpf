<Window x:Class="ChiapasOculto.WPF.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:ChiapasOculto.WPF"
      mc:Ignorable="d"
      Title="Chiapas Oculto" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid Background="#E8FFCC">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Área superior libre -->
                <RowDefinition Height="Auto"/>
                <!-- Fila para los botones -->
            </Grid.RowDefinitions>

            <!-- Aquí iría tu contenido principal en Row=0 si hay algo -->

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button Content="AGREGAR" Height="37" Width="134" Background="#0BC333" Margin="10,0"/>
                <Button Content="ELIMINAR" Height="37" Width="134" Background="#C30B0B" Margin="10,0"/>
            <Button Content="MODIFICAR" Height="37" Width="134" Background="#E98623"/>
        </StackPanel>
        </Grid>

</Window>
