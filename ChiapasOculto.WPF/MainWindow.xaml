<Window x:Class="ChiapasOculto.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChiapasOculto.WPF"
        mc:Ignorable="d"
        Title="Chiapas Oculto" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid Background="#E8FFCC" Loaded="Grid_Loaded">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="204*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Cabecera -->
            <RowDefinition Height="*"/>
            <!-- Contenido -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- CABECERA -->
        <Grid Grid.Row="0" Background="White" Margin="0,1,0,23" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="43*"/>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Bienvenida -->

            <!-- Opciones de navegación -->
            <Label x:Name="Registrase" Content="REGISTRARSE" Grid.Column="2" Margin="15,0,15,0" FontWeight="Bold" VerticalAlignment="Center" MouseDoubleClick="Registrase_MouseDoubleClick"/>
            <Label Content="INICIAR SESIÓN" Grid.Column="3" Margin="15,0,15,0" FontWeight="Bold" VerticalAlignment="Center" MouseDoubleClick="Label_MouseDoubleClick"/>
            <Label x:Name="operadoras" Content="OPERADORAS" Grid.Column="4" Margin="15,0,15,0" FontWeight="Bold" VerticalAlignment="Center" MouseDoubleClick="operadoras_MouseDoubleClick"/>
            <Label x:Name="BIENVENIDO" Content="BIENVENIDO ADMINISTRADOR:" HorizontalAlignment="Left" Margin="4,-3,0,0" VerticalAlignment="Top" Width="228" Foreground="Black" FontWeight="Bold" Grid.Column="1" FontSize="14"/>
            <TextBlock x:Name="Identificador" Foreground="Red" FontWeight="Bold" FontSize="14" Grid.Column="1" Margin="4,22,82,-23">(Nombre)</TextBlock>
        </Grid>

        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Row="1" Grid.ColumnSpan="2">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="TarjetasOperadorasPanel" Margin="10"/>
            </ScrollViewer>


        </Grid>

        <!-- BOTONES -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button x:Name="Agregar"   Content="AGREGAR" Height="37" Width="134" Background="#0BC333" Margin="10,0" Click="Agregar_Click"/>
            <Button x:Name="Eliminar" Content="ELIMINAR" Height="37" Width="134" Background="#C30B0B" Margin="10,0" Click="Button_Click"/>
            <Button x:Name="Modificar" Content="MODIFICAR" Height="37" Width="134" Background="#E98623" Click="Button_Click_1"/>
        </StackPanel>

        <!-- Logo -->
        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Height="86" Width="150" Margin="0,-17,0,0" Source="Imagenes/logochiapas.png" RenderTransformOrigin="0.315,0.188"/>
    </Grid>
</Window>
