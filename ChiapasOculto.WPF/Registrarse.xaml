<Window x:Class="ChiapasOculto.WPF.Registrarse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrarse" WindowState="Maximized">
    <Grid Background="#E8FFCC">
        <!-- Columnas: Izquierda (formulario) y Derecha (imagen fondo) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel Izquierdo: FORMULARIO -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Contenido -->
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <DockPanel Background="White" Height="100">
                <Image Source="Imagenes/logochiapas.png" Height="133" Width="232" Margin="0,-8,0,5" DockPanel.Dock="Left"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="BIENVENID@" FontWeight="Bold" FontSize="20"/>
                    <TextBlock Foreground="Red" FontWeight="Bold" FontSize="14">(Nombre)</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" DockPanel.Dock="Right">
                    <Label x:Name="Registrase" Content="REGISTRARSE" Grid.Column="2" Margin="15,0,15,0" FontWeight="Bold" VerticalAlignment="Center" MouseDoubleClick="Registrase_MouseDoubleClick"/>
                    <Label Content="INICIAR SESIÓN" Grid.Column="3" Margin="15,0,15,0" FontWeight="Bold" VerticalAlignment="Center" MouseDoubleClick="Label_MouseDoubleClick"/>
                    <Label x:Name="operadoras" Content="OPERADORAS" Grid.Column="4" Margin="15,0,15,0" FontWeight="Bold" VerticalAlignment="Center" MouseDoubleClick="operadoras_MouseDoubleClick"/>
                </StackPanel>
            </DockPanel>

            <!-- FORMULARIO -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="80,0">
                <Image Source="Imagenes/user.png" Width="500" HorizontalAlignment="Center" Grid.Row="0" Margin="0,-100,0,-50" Height="250" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5"/>
                <TextBlock Text="Bienvenido a Chiapas Oculto" FontFamily="Cooper Black" FontSize="22" HorizontalAlignment="Center" Margin="0,10"/>

                <!-- Datos personales -->
                <UniformGrid Columns="2" Margin="0,10">
                    <StackPanel Margin="10">
                        <TextBlock Text="Nombre" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtNombre"  Height="35" BorderBrush="#101012" BorderThickness="1" FontSize="16" Background="Transparent" Padding="5"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="Celular" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtTelefono"  Height="35" BorderBrush="#101012" BorderThickness="1" FontSize="16" Background="Transparent" Padding="5"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="Apellidos" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtApellidos" Height="35" BorderBrush="#101012" BorderThickness="1" FontSize="16" Background="Transparent" Padding="5"/>
                    </StackPanel>
                    <StackPanel Margin="10" Grid.ColumnSpan="2">
                        <TextBlock Text="Correo" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtCorreo" Height="35" BorderBrush="#101012" BorderThickness="1" FontSize="16" Background="Transparent" Padding="5"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="Contraseña" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="TxtContrasena" Height="35" BorderBrush="#101012" BorderThickness="1" FontSize="16" Background="Transparent" Padding="5"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="Verificar Contraseña" Margin="0,0,0,5"/>
                        <PasswordBox Height="35" BorderBrush="#101012" BorderThickness="1" FontSize="16" Background="Transparent" Padding="5"/>
                    </StackPanel>
                </UniformGrid>

                <!-- Recordar y botón -->
                <CheckBox Content="Recordar mi nombre de usuario" Margin="10,15" FontSize="14"/>
                <Button Content="Registrarse" Width="250" Height="45" Background="#223509" Foreground="White" FontSize="16" HorizontalAlignment="Center" Margin="0,20,0,0" Click="Button_Click"/>
            </StackPanel>
        </Grid>

        <!-- Panel Derecho: IMAGEN FONDO LLENA -->
        <Image Grid.Column="1"
               Source="Imagenes/c7.jpg"
               Stretch="UniformToFill"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Margin="0"/>
    </Grid>
</Window>