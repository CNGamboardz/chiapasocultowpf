<Window x:Class="ChiapasOculto.WPF.IniciarSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChiapasOculto.WPF"
        mc:Ignorable="d"
        Title="IniciarSesion" Height="600" Width="1000" WindowState="Maximized">

    <Grid Background="#E8FFCC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <!-- Más ancho para el formulario -->
            <ColumnDefinition Width="2*"/>
            <!-- Imagen derecha -->
        </Grid.ColumnDefinitions>

        <!-- PANEL IZQUIERDO -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Encabezado -->
                <RowDefinition Height="*"/>
                <!-- Formulario -->
            </Grid.RowDefinitions>

            <!-- Encabezado -->
            <DockPanel Background="White" LastChildFill="True" Height="100" VerticalAlignment="Top">
                <!-- Logo -->
                <Image Source="Imagenes/logochiapas.png"
                       Height="133" Width="232" Margin="0,-8,0,5" DockPanel.Dock="Left"/>

                <!-- Texto Bienvenido -->
                <StackPanel VerticalAlignment="Center" DockPanel.Dock="Left" Margin="10,0,0,0">
                    <TextBlock Text="BIENVENIDO ADMINISTRADOR" FontWeight="Bold" FontSize="20" Foreground="Black"/>
                    <TextBlock  x:Name="Identificador" FontWeight="Bold" Foreground="Red" FontSize="14">
                        <Run Language="es-mx" Text="("/>
                        <Run Text="Nombre"/>
                        <Run Language="es-mx" Text=")"/>
                    </TextBlock>
                </StackPanel>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" DockPanel.Dock="Right" Margin="0,0,10,0">
                    <Label x:Name="Registrase" Content="REGISTRARSE" Grid.Column="2" Margin="15,0,15,0" FontWeight="Bold" VerticalAlignment="Center" MouseDoubleClick="Registrase_MouseDoubleClick"/>
                    <Label Content="INICIAR SESIÓN" Grid.Column="3" Margin="15,0,15,0" FontWeight="Bold" VerticalAlignment="Center" MouseDoubleClick="Label_MouseDoubleClick"/>
                    <Label x:Name="operadoras" Content="OPERADORAS" Grid.Column="4" Margin="15,0,15,0" FontWeight="Bold" VerticalAlignment="Center" MouseDoubleClick="operadoras_MouseDoubleClick"/>
                </StackPanel>
            </DockPanel>

            <!-- Formulario -->
            <Grid Grid.Row="1" Margin="40" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Imagen de usuario -->
                <Image Source="Imagenes/user.png" Width="500" HorizontalAlignment="Center" Grid.Row="0" Margin="0,-80,0,0" Height="250" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-0.579"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>

                <!-- Título -->
                <TextBlock Text="Bienvenido a Chiapas Oculto" FontWeight="Bold" FontFamily="Cooper Black"
                           HorizontalAlignment="Center" Margin="0,0,0,30" FontSize="22" Grid.Row="1"/>

                <!-- Formulario Campos -->
                <Grid Grid.Row="2" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Correo Electrónico" FontSize="16" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <TextBox x:Name="TxtCorreo" Height="35" FontSize="16" 
                             Background="{x:Null}" BorderBrush="#FF101012" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>

                    <TextBlock Text="Contraseña" FontSize="16" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <PasswordBox x:Name="TxtContrasena" Height="35" FontSize="16"
                                 Background="{x:Null}" BorderBrush="#FF101012" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>
                </Grid>

                <!-- Recordar usuario -->
                <CheckBox Content="Recordar mi nombre de usuario" FontSize="14" Margin="0,0,0,20" Grid.Row="3"/>

                <!-- Botón Iniciar Sesión -->
                <Button x:Name="btniniciarsesion" Content="Iniciar Sesión"
                        Width="250" Height="50" Background="#FF223509" Foreground="White"
                        FontSize="16" Grid.Row="4" HorizontalAlignment="Center" Click="btniniciarsesion_Click"/>
            </Grid>
        </Grid>

        <!-- PANEL DERECHO: IMAGEN -->
        <Grid Grid.Column="1">
            <Image Source="Imagenes/CCPAQUETE.jpg"
                   Stretch="Fill"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Window>