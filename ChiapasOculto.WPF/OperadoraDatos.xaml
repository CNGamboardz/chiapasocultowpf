<Window x:Class="ChiapasOculto.WPF.OperadoraDatos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OperadoraDatos" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- IMAGEN DERECHA DE FONDO TOTAL SIN ESPACIOS -->
        <Grid Grid.Column="1">
            <Image Source="Imagenes/parque_berriozabal (1).png"
                   Stretch="UniformToFill" Margin="-66,0,-65,0" RenderTransformOrigin="0.528,0.507"/>
        </Grid>

        <!-- PANEL IZQUIERDO CON FORMULARIO Y HEADER -->
        <Grid Grid.Column="0" Background="#E8FFCC">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <DockPanel Background="White" Height="100">
                <Image Source="Imagenes/logochiapas.png" Height="133" Width="232" Margin="0,-8,0,5" DockPanel.Dock="Left"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="BIENVENIDO ADMINISTRADOR" FontWeight="Bold" FontSize="20"/>
                    <TextBlock  x:Name="Identificador" Foreground="Red" FontWeight="Bold" FontSize="14">(Nombre)</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" DockPanel.Dock="Right">
                    <Label Content="INICIO" Margin="15,0" FontWeight="Bold" VerticalAlignment="Center" MouseDown="Inicio_MouseDown"/>
                    <Label Content="CERRAR SESIÓN" Margin="15,0" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </DockPanel>

            <!-- FORMULARIO -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="80,0">
                <TextBlock Text="Datos de la Operadora" FontFamily="Cooper Black" FontSize="22" HorizontalAlignment="Center" Margin="0,10"/>

                <StackPanel Margin="10">
                    <TextBlock Text="Nombre de Operadora" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtOperadoraNombre" Height="35" BorderBrush="#101012" BorderThickness="1" FontSize="16" Background="Transparent" Padding="5"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <TextBlock Text="Correo Electrónico" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtOperadoraCorreo" Height="35" BorderBrush="#101012" BorderThickness="1" FontSize="16" Background="Transparent" Padding="5"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <TextBlock Text="Contraseña" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="TxtOperadoraContrasena" Height="35" BorderBrush="#101012" BorderThickness="1" FontSize="16" Background="Transparent" Padding="5"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <TextBlock Text="Teléfono" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtOperadoraTelefono" Height="35" BorderBrush="#101012" BorderThickness="1" FontSize="16" Background="Transparent" Padding="5"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <TextBlock Text="Dirección" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtOperadoraDireccion" Height="35" BorderBrush="#101012" BorderThickness="1" FontSize="16" Background="Transparent" Padding="5"/>
                </StackPanel>

                <Button Content="Guardar" Width="250" Height="45" Background="#223509" Foreground="White" FontSize="16" HorizontalAlignment="Center" Margin="0,20,0,0" Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>