<Window x:Class="ChiapasOculto.WPF.Modificar_Eliminar"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:sys="clr-namespace:System;assembly=mscorlib"
         Title="Formato Condicional" Height="600" Width="1000" Background="#E8FFCC"
         WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <!-- Dividimos en dos filas: Header y Contenido -->
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <!-- HEADER -->
            <RowDefinition Height="*"/>
            <!-- CONTENIDO -->
        </Grid.RowDefinitions>

        <!-- HEADER EN LA PARTE SUPERIOR -->
        <DockPanel Grid.Row="0" Background="White">
            <Image Source="Imagenes/logochiapas.png" 
           Height="141" Width="214" Margin="10,0" DockPanel.Dock="Left"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="BIENVENID@" FontWeight="Bold" FontSize="20"/>
                <TextBlock Foreground="Red" FontWeight="Bold" FontSize="14">(Nombre)</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" DockPanel.Dock="Right">
                <Label Content="INICIO" Margin="15,0" FontWeight="Bold" VerticalAlignment="Center"/>
                <Label Content="CERRAR SESIÓN" Margin="15,0" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
        </DockPanel>

        <!-- CONTENIDO DIVIDIDO EN DOS COLUMNAS -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- PANEL IZQUIERDO -->
            <StackPanel Grid.Column="0" Margin="20">
                <TextBlock Text="Lista de Operadoras" FontFamily="Cooper Black" FontSize="22" FontWeight="Bold" Foreground="Black" Margin="0,0,0,10"/>
                <DataGrid x:Name="dgProductos" AutoGenerateColumns="False" FontSize="15" Height="500"
                  AlternatingRowBackground="#E6F2FF" HeadersVisibility="Column" CanUserAddRows="False" >
                    <DataGrid.Columns>

                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <!-- PANEL DERECHO -->
            <Border Grid.Column="1" Background="#8aa171" Padding="30">
                <StackPanel>
                    <TextBlock Text="Datos de Operadora" FontFamily="Cooper Black"  Foreground="Black" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                    <TextBlock Text="Nombre de Operadora:" Foreground="Black"/>
                    <TextBox Height="30" Margin="0,0,0,10"/>

                    <TextBlock Text="Correo Electrónico:" Foreground="Black"/>
                    <TextBox Height="30" Margin="0,0,0,10"/>

                    <TextBlock Text="Contraseña:" Foreground="Black"/>
                    <TextBox Height="30" Margin="0,0,0,10"/>

                    <TextBlock Text="Teléfono:" Foreground="Black"/>
                    <TextBox Height="30" Margin="0,0,0,10"/>

                    <TextBlock Text="Dirección:" Foreground="Black"/>
                    <TextBox Height="30" Margin="0,0,0,20"/>

                    <Button Content="Guardar" Height="40" Background="#d2e7bb" Foreground="Black" FontWeight="Bold"/>
                    <Button Content="Modificar" Height="40" Background="#d2e7bb" Foreground="Black" FontWeight="Bold"/>
                    <Button Content="Eliminar" Height="40" Background="#d2e7bb" Foreground="Black" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
